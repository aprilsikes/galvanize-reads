extends ../layout

block content
    if books
      for book in books
        .main
          .containeru
            img.cover(src='#{book.cover_url}')
          .containero
            p.title #{book.title}
            a(href='/books/#{book.id}/edit') Edit
            a(href='/books/#{book.id}/delete') Remove     
            p By
              a(href='')
            p.it #{book.genre} 
            p #{book.description}
      a(href='/books/new') Add a Book
        
